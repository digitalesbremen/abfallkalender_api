{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "prConcurrentLimit": 3,
  "prHourlyLimit": 2,
  "assignees": [
    "larmic"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchManagers": ["terraform"],
      "matchDepTypes": ["provider"],
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "https:\\/\\/github\\.com\\/awslabs\\/aws-lambda-web-adapter\\/releases\\/download\\/v(?<currentValue>.*?)\\/"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "awslabs/aws-lambda-web-adapter"
    }
  ]
}