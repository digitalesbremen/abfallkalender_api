{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "prConcurrentLimit": 3,
  "prHourlyLimit": 2,
  "assignees": [
    "larmic"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchManagers": ["terraform"],
      "matchDepTypes": ["provider"],
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "COPY --from=public\\.ecr\\.aws\\/awsguru\\/aws-lambda-adapter:(?<currentValue>.*?) "
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "public.ecr.aws/awsguru/aws-lambda-adapter"
    }
  ]
}